<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre de evaluación"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/txtNombreEvaluacionActualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de la Evaluación"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/txtDescripcionEvaluacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción de la Evaluación"
        android:inputType="textMultiLine"
        android:minLines="3" />
    <EditText
        android:id="@+id/txtIdEvaluacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de la Evaluación"
        android:inputType="text"
        android:visibility="invisible"/>

</LinearLayout>
